			private function onBlipFeedResult(vo : JukeboxAPIVO):void{
				trace("onBlipFeedResult" + vo.data);
				for (var i:int = 0; i < vo.data.length; i++) {
					Logger.log((vo.data[i] as JukeboxAPIObject).title,"Blip");
					
				}
			}
			
		]]>
	</fx:Script>
	
